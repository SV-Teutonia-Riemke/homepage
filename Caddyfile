{
	skip_install_trust
	auto_https off

	frankenphp {
	}
}

:80 {
	root * /app/public/
	encode zstd br gzip

    @admin host admin.*.*

    handle @admin {
        php_server {
            root /app/public/
            worker {
                file index.php
                env APP_RUNTIME Runtime\FrankenPhpSymfony\Runtime
                env APP_ID admin
            }
        }
    }

    handle  {
        php_server {
            root /app/public/
            worker {
                file index.php
                env APP_RUNTIME Runtime\FrankenPhpSymfony\Runtime
                env APP_ID website
            }
        }
    }
}

# import Caddyfile.d/*.caddyfile
