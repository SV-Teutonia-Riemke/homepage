<div{{ attributes }}>
    {% block preElements %}
        {% if preElements is not null %}
            <twig:bs:button:group class="me-1">
                {{ preElements|raw }}
            </twig:bs:button:group>
        {% endif %}
    {% endblock %}

    {% block content %}
        {% if up is not null and down is not null %}
            <twig:bs:button:group class="me-1">
                <twig:bs:button href="{{ up }}" tooltip="Nach Oben" icon="fa6-solid:arrow-up"/>
                <twig:bs:button href="{{ down }}" tooltip="Nach Unten" icon="fa6-solid:arrow-down"/>
            </twig:bs:button:group>
        {% endif %}

        <twig:bs:button:group class="me-1">
            {% if enable is not null and disable is not null and enabled is not null %}
                {% if enabled %}
                    <twig:bs:button variant="success" href="{{ disable }}" tooltip="Deaktivieren" icon="fa6-solid:circle"/>
                {% else %}
                    <twig:bs:button variant="danger" href="{{ enable }}" tooltip="Aktivieren" icon="fa6-solid:circle"/>
                {% endif %}
            {% endif %}
            {% if edit is not null %}
                <twig:bs:button variant="primary" href="{{ edit }}" tooltip="Bearbeiten" icon="fa6-solid:pencil"/>
            {% endif %}
        </twig:bs:button:group>

        {% if remove is not null %}
            <twig:bs:button:group class="me-1">
                <twig:bs:button variant="danger" href="{{ remove }}" tooltip="LÃ¶schen" icon="fa6-solid:trash" confirmation />
            </twig:bs:button:group>
        {% endif %}
    {% endblock %}

    {% block postElements %}
        {% if postElements is not null %}
            {{ postElements }}
        {% endif %}
    {% endblock %}
</div>
