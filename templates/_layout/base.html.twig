<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="{{ asset('build/manifest.json') }}">

    <title>{% block title %}SV Teutonia 1919 Bochum-Riemke Handball e.V.{% endblock %}</title>

    <script src="https://cdn.jsdelivr.net/npm/@iconify/iconify@2.2.1/dist/iconify.min.js" integrity="sha256-O9uMd+BfwP4cSSH3dWQi1EZgx1mV4urldnLnKoy6uuo=" crossorigin="anonymous"></script>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="theme-light">

<div class="page">
    {% block body %}{% endblock %}
</div>

{% if config_get('cookie_consent_enable') %}
    <script type="text/javascript" src="https://www.termsfeed.com/public/cookie-consent/4.0.0/cookie-consent.js" charset="UTF-8"></script>
    <script type="text/javascript" charset="UTF-8">
        document.addEventListener('DOMContentLoaded', function () {
            cookieconsent.run({
                "notice_banner_type": "simple",
                "consent_type": "implied",
                "palette": "light",
                "language": "de",
                "page_load_consent_levels": ["strictly-necessary", "functionality", "tracking"],
                "notice_banner_reject_button_hide": false,
                "preferences_center_close_button_hide": false,
                "page_refresh_confirmation_buttons": false,
                "website_name": "SV Teutonia Bochum-Riemke 1919 Handball e.V.",
                "website_privacy_policy_url": "https://teutonia-riemke.de/impressum"
            });
        });
    </script>
{% endif %}

{% if config_get('matomo_enable') and config_has('matomo_url') and config_has('matomo_id') %}
    <script type="text/javascript">
        var _paq = window._paq = window._paq || [];
        _paq.push(['trackPageView']);
        _paq.push(['enableLinkTracking']);
        (function () {
            var u = "//{{ config_get('matomo_url') }}/";
            _paq.push(['setTrackerUrl', u + 'matomo.php']);
            _paq.push(['setSiteId', '{{ config_get('matomo_id') }}']);
            var d = document, g = d.createElement('script'), s = d.getElementsByTagName('script')[0];
            g.async = true;
            g.src = u + 'matomo.js';
            s.parentNode.insertBefore(g, s);
        })();
    </script>
{% endif %}

</body>
</html>
