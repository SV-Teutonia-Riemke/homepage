{% extends '_layout/layout.html.twig' %}

{% block pageSubBody %}
    <div class="row row-cards">
        <div class="col-9">
            {% for article in articles %}
                <div class="card mb-3">
                    <div class="card-header">
                        <h3 class="card-title">{{ article.title }}</h3>
                    </div>
                    {% if article.image is not null %}
                        <div class="card-img-top">
                            <img src="{{ article.image.filePath|imagine_filter('optimized', { relative_resize: { widen: 1100 } }) }}"/>
                        </div>
                    {% endif %}
                    <div class="card-body">{{ article.content|raw }}</div>
                    <div class="card-footer">
                        Erstellt am {{ article.createdAt|format_datetime }}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-3">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-status-top bg-primary"></div>
                        <div class="card-header bg-primary-lt">
                            <h3 class="card-title">
                                <span class="iconify-inline" data-icon="fa6-solid:handshake"></span>
                                Sponsoren
                            </h3>
                        </div>
                        <div class="card-body text-center">
                            {% for sponsor in sponsors %}
                                {% set image %}
                                    <img src="{{ sponsor.image.filePath|imagine_filter('optimized', { relative_resize: { widen: 275 } }) }}" width="170"/>
                                {% endset %}

                                {% if sponsor.url is null %}
                                    {{ image|raw }}
                                {% else %}
                                    <a href="{{ sponsor.url }}" target="_blank" rel="noreferrer">
                                        {{ image|raw }}
                                    </a>
                                {% endif %}

                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
