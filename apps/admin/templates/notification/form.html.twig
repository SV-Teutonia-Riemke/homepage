{% extends '@admin/_layout/simple_form.html.twig' %}

{% set pageTitle = 'Benachrichtigung' %}
{% set formCancelLink = path('admin_notification_index') %}

{% block pageBody %}
    <twig:bs:row cards>
        <twig:bs:col>
            <twig:bs:card>
                {{ form_row(form.title) }}
            </twig:bs:card>
        </twig:bs:col>
        <twig:bs:col>
            <twig:bs:card header="Einstellungen">
                {{ form_row(form.enabled) }}
            </twig:bs:card>
        </twig:bs:col>
        <twig:bs:col>
            <twig:bs:card header="{{ form.content.vars.label }}">
                {{ form_widget(form.content) }}
            </twig:bs:card>
        </twig:bs:col>
    </twig:bs:row>
{% endblock %}
