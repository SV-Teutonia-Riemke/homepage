<div {{ attributes }}>

    <div class="space-y">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Team</h3>
            </div>
            <div class="card-body">
                {{ form_row(form.name) }}
                {{ form_row(form.enabled) }}
                {{ form_row(form.gender) }}
                {{ form_row(form.ageCategory) }}
                {{ form_row(form.image) }}
                {{ form_row(form.currentMatchday) }}
                {{ form_row(form.handballNetId, { attr: { placeholder: 'handball4all.westfalen.867086' } }) }}
                {{ form_row(form.facebook) }}
                {{ form_row(form.instagram) }}
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Players</h3>
                <div class="card-actions">
                    <button data-action="live#action" data-action-name="addPlayer" type="button" class="btn btn-outline-primary">
                        <span class="iconify icon" data-icon="fa6-solid:circle-plus"></span>
                        Add
                    </button>
                </div>
            </div>
            <table class="table card-table text-nowrap table-borderless">
                <thead>
                <tr>
                    <th>Person</th>
                    <th>Number</th>
                    <th>Position</th>
                    <th>Image</th>
                    <th class="w-1"></th>
                </tr>
                </thead>
                <tbody>
                {% for key, itemForm in form.players %}
                    <tr>
                        <td>{{ form_row(itemForm.person, { label: false }) }}</td>
                        <td>{{ form_row(itemForm.number, { label: false }) }}</td>
                        <td>{{ form_row(itemForm.position, { label: false }) }}</td>
                        <td>{{ form_row(itemForm.image, { label: false }) }}</td>
                        <td class="text-end">
                            <button data-action="live#action" data-action-name="removePlayer(index={{ key }})" type="button" class="btn btn-icon btn-outline-danger">
                                <span class="iconify icon" data-icon="fa6-solid:trash"></span>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Staff</h3>
                <div class="card-actions">
                    <button data-action="live#action" data-action-name="addStaff" type="button" class="btn btn-outline-primary">
                        <span class="iconify icon" data-icon="fa6-solid:circle-plus"></span>
                        Add
                    </button>
                </div>
            </div>
            <table class="table card-table text-nowrap table-borderless">
                <thead>
                <tr>
                    <th>Person</th>
                    <th>Position</th>
                    <th>Image</th>
                    <th class="w-1"></th>
                </tr>
                </thead>
                <tbody>
                {% for key, itemForm in form.staffs %}
                    <tr>
                        <td>{{ form_row(itemForm.person, { label: false }) }}</td>
                        <td>{{ form_row(itemForm.position, { label: false }) }}</td>
                        <td>{{ form_row(itemForm.image, { label: false }) }}</td>
                        <td class="text-end">
                            <button data-action="live#action" data-action-name="removeStaff(index={{ key }})" type="button" class="btn btn-icon btn-outline-danger">
                                <span class="iconify icon" data-icon="fa6-solid:trash"></span>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% do form.players.setRendered %}
    {% do form.staffs.setRendered %}
</div>
