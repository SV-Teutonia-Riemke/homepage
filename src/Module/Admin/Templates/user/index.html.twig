{% extends '@admin/_layout/layout.html.twig' %}

{% set pagePreTitle = 'List' %}
{% set pageTitle = 'User' %}

{% block pageTitleActionsButtons %}
    <a class="btn btn-primary" href="{{ path('app_admin_user_create') }}">Create</a>
{% endblock %}

{% block pageBody %}
    <twig:pagination:table title="Benutzer">
        <twig:block name="tableHeader">
            <th class="w-1">Id</th>
            <th>Email</th>
            <th></th>
        </twig:block>
        <twig:block name="tableRow">
            <twig:pagination:row
                    edit="{{ path('app_admin_user_edit', { user: object.id }) }}"
                    remove="{{ path('app_admin_user_remove', { user: object.id }) }}"
            >
                <td>{{ object.id }}</td>
                <td>{{ object.email }}</td>
            </twig:pagination:row>
        </twig:block>
    </twig:pagination:table>
{% endblock %}
