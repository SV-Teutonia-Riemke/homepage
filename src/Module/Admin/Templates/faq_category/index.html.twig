{% extends '@admin/_layout/layout.html.twig' %}

{% set pagePreTitle = 'Liste' %}
{% set pageTitle = 'FAQ Kategorien' %}

{% block pageTitleActionsButtons %}
    <twig:crud:create crud="{{ crud }}"/>
{% endblock %}

{% block pageBody %}
    <twig:pagination:table :title="pageTitle" :iterable="iterable">
        <twig:block name="tableHeader">
            <th class="w-1"></th>
            <th class="w-1">Id</th>
            <th>Titel</th>
            <th></th>
        </twig:block>
        <twig:block name="tableRow">
            <twig:crud:row :crud="crud" :object="object" enabled="{{ object.enabled }}">
                <twig:block name="content">
                    <td>{{ object.id }}</td>
                    <td>{{ object.title }}</td>
                </twig:block>
                <twig:block name="preCta">
                    <twig:bs:button variant="secondary" href="{{ path('app_admin_faq_article_index', { category: object.id }) }}" title="Artikel"/>
                </twig:block>
            </twig:crud:row>
        </twig:block>
    </twig:pagination:table>
{% endblock %}
