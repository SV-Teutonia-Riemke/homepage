{% extends '@admin/_layout/layout.html.twig' %}

{% set pagePreTitle = 'List' %}
{% set pageTitle = 'Personen Gruppen' %}

{% block pageTitleActionsButtons %}
    <a class="btn btn-primary" href="{{ path('app_admin_person_group_create') }}">Create</a>
{% endblock %}

{% block pageBody %}
    {% embed '_partials/pagination_table.html.twig' with { title: 'Teams'} %}
        {% block paginationHeader %}
            <th class="w-1">Id</th>
            <th>Name</th>
            <th></th>
        {% endblock %}
        {% block paginationRow %}
            <td>{{ object.id }}</td>
            <td>{{ object.name }}</td>
            <td class="text-end">
                <twig:pagination:cta
                        enabled="{{ object.enabled }}"
                        up="{{ path('app_admin_person_group_up', { personGroup: object.id }) }}"
                        down="{{ path('app_admin_person_group_down', { personGroup: object.id }) }}"
                        remove="{{ path('app_admin_person_group_remove', { personGroup: object.id }) }}"
                        edit="{{ path('app_admin_person_group_edit', { personGroup: object.id }) }}"
                        enable="{{ path('app_admin_person_group_enable', { personGroup: object.id }) }}"
                        disable="{{ path('app_admin_person_group_disable', { personGroup: object.id }) }}"
                />
            </td>
        {% endblock %}
    {% endembed %}
{% endblock %}
