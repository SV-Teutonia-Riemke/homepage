{% extends '@admin/_layout/layout.html.twig' %}

{% set pagePreTitle = 'List' %}
{% set pageTitle = 'Notification' %}

{% block pageTitleActionsButtons %}
    <a class="btn btn-primary" href="{{ path('app_admin_notification_create') }}">Create</a>
{% endblock %}

{% block pageBody %}
    {% embed '_partials/pagination_table.html.twig' with { title: 'Notifications'} %}
        {% block paginationHeader %}
            <th class="w-1"></th>
            <th class="w-1">Id</th>
            <th>Title</th>
            <th></th>
        {% endblock %}
        {% block paginationRow %}
            <td>
                <span class="iconify-inline text-{% if object.enabled %}success{% else %}danger{% endif %}" data-icon="fa6-solid:circle"></span>
            </td>
            <td>{{ object.id }}</td>
            <td>{{ object.title }}</td>
            <td class="text-end">
                {{ pagination_cta(
                    object,
                    path('app_admin_notification_remove', { notification: object.id }),
                    path('app_admin_notification_edit', { notification: object.id }),
                    path('app_admin_notification_enable', { notification: object.id }),
                    path('app_admin_notification_disable', { notification: object.id }),
                ) }}
            </td>
        {% endblock %}
    {% endembed %}
{% endblock %}
