{% extends '@admin/_layout/layout.html.twig' %}

{% set pagePreTitle = 'List' %}
{% set pageTitle = 'Link' %}

{% block pageTitleActionsButtons %}
    <a class="btn btn-primary" href="{{ path('app_admin_link_create') }}">Create</a>
{% endblock %}

{% block pageBody %}
    <twig:pagination:table title="Downloads">
        <twig:block name="tableHeader">
            <th class="w-1"></th>
            <th class="w-1">Id</th>
            <th>Name</th>
            <th>URI</th>
            <th></th>
        </twig:block>
        <twig:block name="tableRow">
            <twig:pagination:row
                    enabled="{{ object.enabled }}"
                    remove="{{ path('app_admin_link_remove', { object: object.id }) }}"
                    edit="{{ path('app_admin_link_edit', { object: object.id }) }}"
                    enable="{{ path('app_admin_link_enable', { object: object.id }) }}"
                    disable="{{ path('app_admin_link_disable', { object: object.id }) }}"
            >
                <td>{{ object.id }}</td>
                <td>{{ object.name }}</td>
                <td>{{ object.uri }}</td>
            </twig:pagination:row>
        </twig:block>
    </twig:pagination:table>
{% endblock %}
