{% extends '@admin/_layout/layout.html.twig' %}

{% set pagePreTitle = 'List' %}
{% set pageTitle = 'Link' %}

{% block pageTitleActionsButtons %}
    <a class="btn btn-primary" href="{{ path('app_admin_link_create') }}">Create</a>
{% endblock %}

{% block pageBody %}
    {% embed '_partials/pagination_table.html.twig' with {
        title: 'Links'
    } %}
        {% block paginationHeader %}
            <th class="w-1"></th>
            <th class="w-1">Id</th>
            <th>Name</th>
            <th>URI</th>
            <th></th>
        {% endblock %}
        {% block paginationRow %}
            <td>
                <span class="iconify-inline text-{% if object.enabled %}success{% else %}danger{% endif %}" data-icon="fa6-solid:circle"></span>
            </td>
            <td>{{ object.id }}</td>
            <td>{{ object.name }}</td>
            <td>{{ object.uri }}</td>
            <td class="text-end">
                {{ pagination_cta(
                    object,
                    path('app_admin_link_remove', { link: object.id }),
                    path('app_admin_link_edit', { link: object.id }),
                    path('app_admin_link_enable', { link: object.id }),
                    path('app_admin_link_disable', { link: object.id }),
                ) }}
            </td>
        {% endblock %}
    {% endembed %}
{% endblock %}
