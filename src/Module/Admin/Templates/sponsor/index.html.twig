{% extends '@admin/_layout/layout.html.twig' %}

{% set pagePreTitle = 'List' %}
{% set pageTitle = 'Sponsor' %}

{% block pageTitleActionsButtons %}
    <twig:crud:create crud="{{ crud }}" />
{% endblock %}

{% block pageBody %}
    <twig:pagination:table title="Sponsors">
        <twig:block name="tableHeader">
            <th class="w-1"></th>
            <th class="w-1">Id</th>
            <th>Name</th>
            <th>Level</th>
            <th>Url</th>
            <th>Logo</th>
            <th class="w-1"></th>
        </twig:block>
        <twig:block name="tableRow">
            <twig:crud:row enabled="{{ object.enabled }}">
                <td>{{ object.id }}</td>
                <td title="{{ object.name }}">{{ object.name|u.truncate(20, '...') }}</td>
                <td>{{ object.level.translatable|trans }}</td>
                <td>
                    <a href="{{ object.url }}" target="_blank">{{ object.url }}</a>
                </td>
                <td>{{ object.image is null ? '' : object.image.pathName }}</td>
            </twig:crud:row>
        </twig:block>
    </twig:pagination:table>
{% endblock %}
