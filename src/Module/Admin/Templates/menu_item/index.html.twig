{% extends '@admin/_layout/layout.html.twig' %}

{% set pagePreTitle = 'Liste' %}
{% set pageTitle = 'Men√ºs' %}

{% block pageTitleActionsButtons %}
    <twig:bs:button:dropdown type="primary" title="Erstellen">
        <twig:bs:button:dropdown:item href="{{ path('app_admin_menu_item_create', { type: 'main' }) }}" title="Funktion"/>
        <twig:bs:button:dropdown:item href="{{ path('app_admin_menu_item_create', { type: 'url' }) }}" title="Url"/>
        <twig:bs:button:dropdown:item href="{{ path('app_admin_menu_item_create', { type: 'page' }) }}" title="Seite"/>
    </twig:bs:button:dropdown>
{% endblock %}

{% block pageBody %}
    <twig:pagination:table paginationTitle="Items" pagination="{{ pagination }}">
        <twig:block name="paginationHeader">
            <th class="w-1"></th>
            <th class="w-1">Id</th>
            <th>Titel</th>
            <th></th>
        </twig:block>
        <twig:block name="paginationRow">
            <td>
                <twig:ux:icon:enabled enabled="{{ object.enabled }}" />
            </td>
            <td>{{ object.id }}</td>
            <td>{{ object.title }}</td>
            <td class="text-end">
                <twig:pagination:cta
                        enabled="{{ object.enabled }}"
                        up="{{ path('app_admin_menu_item_up', { menuItem: object.id }) }}"
                        down="{{ path('app_admin_menu_item_down', { menuItem: object.id }) }}"
                        remove="{{ path('app_admin_menu_item_remove', { menuItem: object.id }) }}"
                        edit="{{ path('app_admin_menu_item_edit', { menuItem: object.id }) }}"
                        enable="{{ path('app_admin_menu_item_enable', { menuItem: object.id }) }}"
                        disable="{{ path('app_admin_menu_item_disable', { menuItem: object.id }) }}"
                />
            </td>
        </twig:block>
    </twig:pagination:table>
{% endblock %}
