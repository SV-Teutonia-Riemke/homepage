{% extends '@admin/_layout/simple_form.html.twig' %}

{% set pageTitle = 'Download' %}
{% set formCancelLink = path('app_admin_download_index') %}

{% block pageBody %}
    <twig:bs:row cards>
        <twig:bs:col>
            <twig:bs:card>
                {{ form_row(form.name) }}
            </twig:bs:card>
        </twig:bs:col>
        <twig:bs:col>
            <twig:bs:card>
                {{ form_row(form.file) }}
                <div class="hr-text">oder</div>
                {{ form_row(form.uri) }}
            </twig:bs:card>
        </twig:bs:col>
        <twig:bs:col>
            <twig:bs:card header="Einstellungen">
                {{ form_row(form.enabled) }}
            </twig:bs:card>
        </twig:bs:col>
    </twig:bs:row>
{% endblock %}
