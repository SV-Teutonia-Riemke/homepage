{% extends '@admin/_layout/simple_form.html.twig' %}

{% set pageTitle = 'Artikel' %}
{% set formCancelLink = path('app_admin_article_index') %}

{% block pageBody %}
    <twig:bs:row cards>
        <twig:bs:col>
            <div class="card">
                <twig:bs:row class="card-body">
                    <twig:bs:row>
                        <twig:bs:col md="6">{{ form_row(form.title) }}</twig:bs:col>
                        <twig:bs:col md="6">{{ form_row(form.image) }}</twig:bs:col>
                    </twig:bs:row>
                </twig:bs:row>
            </div>
        </twig:bs:col>
        <twig:bs:col>
            <twig:bs:card header="Einstellungen">
                {{ form_row(form.enabled) }}
                {{ form_row(form.author) }}
                {{ form_row(form.publishedAt) }}
            </twig:bs:card>
        </twig:bs:col>
        <twig:bs:col>
            <twig:bs:card header="{{ form.content.vars.label }}">
                {{ form_widget(form.content) }}
            </twig:bs:card>
        </twig:bs:col>
    </twig:bs:row>
{% endblock %}
