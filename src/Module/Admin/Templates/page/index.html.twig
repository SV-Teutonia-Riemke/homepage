{% extends '@admin/_layout/layout.html.twig' %}


{% set pagePreTitle = 'Liste' %}
{% set pageTitle = 'Seiten' %}

{% block pageTitleActionsButtons %}
    <a class="btn btn-primary" href="{{ path('app_admin_page_create') }}">Erstellen</a>
{% endblock %}

{% block pageBody %}
    {% embed '_partials/pagination_table.html.twig' with {
        title: 'Artikel'
    } %}
        {% block paginationHeader %}
            <th class="w-1"></th>
            <th class="w-1">Id</th>
            <th>Titel</th>
            <th></th>
        {% endblock %}
        {% block paginationRow %}
            <td>
                <twig:ux:icon:enabled enabled="{{ object.enabled }}" />
            </td>
            <td>{{ object.id }}</td>
            <td>{{ object.title }}</td>
            <td class="text-end">
                <twig:pagination:cta
                        enabled="{{ object.enabled }}"
                        remove="{{ path('app_admin_page_remove', { page: object.id }) }}"
                        edit="{{ path('app_admin_page_edit', { page: object.id }) }}"
                        enable="{{ path('app_admin_page_enable', { page: object.id }) }}"
                        disable="{{ path('app_admin_page_disable', { page: object.id }) }}"
                />
            </td>
        {% endblock %}
    {% endembed %}
{% endblock %}
