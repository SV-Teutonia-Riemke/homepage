{% extends '@page/_layout/layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function (e, t, n, r, i, s, o) {
            e[i] = e[i] || function () {
                (e[i].q = e[i].q || []).push(arguments)
            }, e[i].l = 1 * new Date;
            s = t.createElement(n), o = t.getElementsByTagName(n)[0];
            s.async = 1;
            s.src = r;
            o.parentNode.insertBefore(s, o)
        })(window, document, "script", 'https://www.handball.net/widgets/embed/v1.js', "_hb");
    </script>
    <script>
        _hb({
            widget: 'spielplan',
            clubId: 'handball4all.westfalen.1393',
            container: 'handball-spielplan'
        })
    </script>
{% endblock %}
{% block pageSubBody %}
    <div class="row">
        <div class="col">
            {% for notification in notifications %}
                <div class="alert alert-info">
                    {{ notification.content|raw }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row row-cards">
        <div class="col-12 col-md-9">
            {% for article in articles %}
                <div class="card mb-3">
                    <div class="card-status-top bg-primary"></div>
                    <div class="card-header">
                        <h3 class="card-title">{{ article.title }}</h3>
                    </div>
                    {% if article.image is not null %}
                        <div class="card-img-top">
                            <img src="{{ article.image.filePath|imagine_filter('optimized', { relative_resize: { widen: 1100 } }) }}"/>
                        </div>
                    {% endif %}
                    <div class="card-body">{{ article.content|raw }}</div>
                    <div class="card-footer">
                        Erstellt am {{ article.createdAt|format_datetime }}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-12 col-md-3">
            <div class="row row-cards">
                {% if sponsors|length > 0 %}
                    <div class="col-12">
                        <div class="card">
                            <div class="card-status-top bg-primary"></div>
                            <div class="card-header bg-primary-lt">
                                <h3 class="card-title">
                                    <span class="iconify-inline" data-icon="fa6-solid:handshake"></span>
                                    Sponsoren
                                </h3>
                            </div>
                            <div class="card-body text-center">
                                {% for sponsor in sponsors %}
                                    {% set image %}
                                        <img src="{{ sponsor.image.filePath|imagine_filter('optimized', { relative_resize: { widen: 275 } }) }}" width="170"/>
                                    {% endset %}

                                    {% if sponsor.url is null %}
                                        {{ image|raw }}
                                    {% else %}
                                        <a href="{{ sponsor.url }}" target="_blank" rel="noreferrer">
                                            {{ image|raw }}
                                        </a>
                                    {% endif %}

                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
                <div class="col-12">
                    <div class="card">
                        <div class="card-status-top bg-primary"></div>
                        <div class="card-header">
                            <h3 class="card-title">
                                NÃ¤chsten Spiele
                            </h3>
                        </div>
                        <div class="card-body p-2 pb-0" id="handball-spielplan">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
