{% extends '@page/_layout/layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}

    {% if config_has('handball_net_club_id') %}
        <script>
            (function (e, t, n, r, i, s, o) {
                e[i] = e[i] || function () {
                    (e[i].q = e[i].q || []).push(arguments)
                }, e[i].l = 1 * new Date;
                s = t.createElement(n), o = t.getElementsByTagName(n)[0];
                s.async = 1;
                s.src = r;
                o.parentNode.insertBefore(s, o)
            })(window, document, "script", 'https://www.handball.net/widgets/embed/v1.js', "_hb");
        </script>
        <script>
            _hb({
                widget: 'spielplan',
                clubId: '{{ config_get('handball_net_club_id') }}',
                container: 'handball-spielplan'
            })
        </script>
    {% endif %}
{% endblock %}

{% block pageSubBody %}
    <div class="row row-cards">
        <div class="col-12 col-md-9">
            {% for notification in notifications %}
                <div class="alert alert-info bg-white">
                    <div class="d-flex">
                        <div class="d-none d-md-block">
                            <span class="iconify-inline icon alert-icon" data-icon="fa6-solid:circle-info"></span>
                        </div>
                        <div>
                            <h4 class="alert-title">{{ notification.title }}</h4>
                            {{ notification.content|striptags('<br><a><b><strong><span>')|raw }}
                        </div>
                    </div>
                </div>
            {% endfor %}

            {% for article in articles %}
                {% embed '@page/news/_article.html.twig' with { article: article } %}
                    {% block cardFooter %}
                        <div class="card-footer">
                            <a href="{{ path('app_news') }}" class="btn btn-primary">Weitere Artikel zum Nachlesen</a>
                        </div>
                    {% endblock %}
                {% endembed %}
            {% endfor %}
        </div>
        <div class="col-12 col-md-3">
            <div class="row row-cards">
                {% include '@page/_partials/sponsors.html.twig' %}

                {% if config_has('handball_net_club_id') %}
                    <div class="col-12">
                        <div class="card">
                            <div class="card-status-top bg-primary"></div>
                            <div class="card-header">
                                <h3 class="card-title">
                                    NÃ¤chsten Spiele
                                </h3>
                            </div>
                            <div class="card-body p-2 pb-0" id="handball-spielplan"></div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
