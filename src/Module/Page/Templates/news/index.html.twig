{% extends '@page/_layout/layout.html.twig' %}

{% block pageSubBody %}
    <div class="row row-cards">
        <div class="col-12 col-md-9">
            {% for article in articles %}
                <div class="card mb-3">
                    <div class="card-status-top bg-primary"></div>
                    <div class="card-header">
                        <h5 class="card-title">{{ article.title }}</h5>
                    </div>
                    {% if article.image is not null %}
                        <div class="card-img-top d-md-none">
                            <img src="{{ article.image.filePath|imagine_filter('optimized', { relative_resize: { widen: 450 } }) }}"/>
                        </div>
                    {% endif %}
                    <div class="card-body">

                        {% if article.image is not null %}
                            <img class="float-start rounded me-2 d-none d-md-block" style="width: 35%" src="{{ article.image.filePath|imagine_filter('optimized', { relative_resize: { widen: 450 } }) }}"/>
                        {% endif %}
                        <div class="card-text">{{ article.content|raw }}</div>
                        <div class="card-text">
                            <small class="text-muted">Erstellt am {{ article.createdAt|format_datetime }}</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
            {{ knp_pagination_render(articles) }}
        </div>
        <div class="col-12 col-md-3">
            <div class="row row-cards">
                {% if sponsors|length > 0 %}
                    <div class="col-12">
                        <div class="card">
                            <div class="card-status-top bg-primary"></div>
                            <div class="card-header bg-primary-lt">
                                <h3 class="card-title">
                                    <span class="iconify-inline" data-icon="fa6-solid:handshake"></span>
                                    Sponsoren
                                </h3>
                            </div>
                            <div class="card-body text-center">
                                <div class="row row-cols-2 justify-content-center">
                                    {% for sponsor in sponsors %}
                                        <div class="col mb-2 d-flex align-items-center justify-content-center">
                                            {% set image %}
                                                <img src="{{ sponsor.image.filePath|imagine_filter('optimized', { downscale: { max: [120, 60] } }) }}"/>
                                            {% endset %}

                                            {% if sponsor.url is null %}
                                                {{ image|raw }}
                                            {% else %}
                                                <a href="{{ sponsor.url }}" target="_blank" rel="noreferrer">
                                                    {{ image|raw }}
                                                </a>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
