{% extends '@page/_layout/layout.html.twig' %}

{% block pageSubBody %}
    <div class="row row-cards">
        <div class="col-12 col-md-9">
            {% block newsContent %}
            {% endblock %}
        </div>
        <div class="col-12 col-md-3">
            <div class="row row-cards">
                {% if sponsors|length > 0 %}
                    <div class="col-12">
                        <div class="card">
                            <div class="card-status-top bg-primary"></div>
                            <div class="card-header bg-primary-lt">
                                <h3 class="card-title">
                                    <span class="iconify-inline" data-icon="fa6-solid:handshake"></span>
                                    Sponsoren
                                </h3>
                            </div>
                            <div class="card-body text-center">
                                <div class="row row-cols-2 justify-content-center">
                                    {% for sponsor in sponsors %}
                                        <div class="col mb-2 d-flex align-items-center justify-content-center">
                                            {% set image %}
                                                <img src="{{ sponsor.image.filePath|imagine_filter('optimized', { downscale: { max: [120, 60] } }) }}"/>
                                            {% endset %}

                                            {% if sponsor.url is null %}
                                                {{ image|raw }}
                                            {% else %}
                                                <a href="{{ sponsor.url }}" target="_blank" rel="noreferrer">
                                                    {{ image|raw }}
                                                </a>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
